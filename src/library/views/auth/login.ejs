<%- include('../parts/layout-start', { title: title }) %>

<form action=<%= isRegistration ? "/api/user/signup" : "/api/user/login" %> method="post">
    <div>
        <label>Логин:</label>
        <input type="text" name="username" /><br />
    </div>
    <div>
        <label>Пароль:</label>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value=<% if(isRegistration) { %> "Зарегистрироваться" <% } else { %>  "Войти" <% } %> />
    </div>
</form>

<%- include('../parts/layout-end') %>
